<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ayoub_chaib.chatserverapp.ChatClientController">
    <TextArea fx:id="chatArea" prefHeight="300" prefWidth="400" editable="false"/>
    <HBox spacing="5">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="Enter message"/>
        <Button text="Send" onAction="#handleSend"/>
    </HBox>
</VBox>
